@inherits LayoutComponentBase
@using BlazorEcommerce.Client.Shared

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Info">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <Search />
        <CartCounter />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Class="d-flex flex-column p-2 pt-5">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

<MudThemeProvider />

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}