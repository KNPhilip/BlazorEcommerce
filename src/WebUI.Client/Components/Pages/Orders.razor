@page "/orders"
@attribute [Authorize]

@inject IOrderUIService OrderUIService

<PageTitle>Orders</PageTitle>

<style>
    .wrapper {
        display: flex;
        padding: 6px;
        border: 1px solid;
        border-color: lightgray;
        border-radius: 6px;
        margin-bottom: 10px;
    }

    .image-wrapper {
        width: 150px;
        text-align: center;
    }

    .image {
        max-height: 150px;
        max-width: 150px;
        padding: 6px;
        border-radius: 5px;
    }

    .details {
        flex-grow: 1;
        padding: 6px;
    }

    .order-price {
        font-weight: 600;
        font-size: 1.2rem;
        text-align: right;
        color: limegreen;
        text-shadow: 1px 1px 2px black;
    }

    .show-more {
        text-decoration: none;
    }
</style>

<div class="container mt-5">
    <h3>Orders</h3>

    @if (orders is null)
    {
        <MudProgressLinear Color="Color.Info" Indeterminate="true" Class="my-7" />
    }
    else if (orders.Count <= 0)
    {
        <span>You have no orders, yet.</span>
    }
    else
    {
        foreach (OrderOverviewDto order in orders)
        {
            <div class="wrapper">
                <div class="image-wrapper">
                    @if (!string.IsNullOrEmpty(order.ProductImageUrl))
                    {
                        <img src="@order.ProductImageUrl" class="image" />
                    }
                    else if (order.Images.Count > 0)
                    {
                        <img src="@order.Images[0].Data" class="image" />
                    }
                </div>
                <div class="details">
                    <h4>@order.Product</h4>
                    <span>@order.OrderDate</span>
                    <br />
                    <a class="show-more" href="orders/@order.Id">Show more...</a>
                </div>
                <div class="order-price">$@order.TotalPrice</div>
            </div>
        }
    }
</div>
