@page "/"
@page "/search/{SearchTerm}/{page:int}"
@page "/{CategoryUrl}"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

@inject IProductUIService ProductUIService

<PageTitle>Home</PageTitle>

<div class="container mt-5">
    @if (SearchTerm is null && CategoryUrl is null)
    {
        <FeaturedProducts />
    }
    else
    {
        <ProductList />
    }
</div>

@code {
    [Parameter]
    public string? CategoryUrl { get; set; }

    [Parameter]
    public string? SearchTerm { get; set; } = null;

    [Parameter]
    public int Page { get; set; } = 1;

    protected sealed override async Task OnParametersSetAsync()
    {
        if (SearchTerm is not null)
        {
            await ProductUIService.SearchProducts(SearchTerm, Page);
        }
        else
        {
            await ProductUIService.GetProducts(CategoryUrl);
        }
    }
}
